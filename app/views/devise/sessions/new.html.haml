.row 
  .col
  .col-lg-10
    %br
    %br
    = form_for(resource, as: resource_name, url: session_path(resource_name), class: "col-lg-6 offset-lg-3 form-group") do |f|
      .col.justify-content-center
        .container.justify-content-center
          .row-4
            .col-lg-9.ml-auto.justify-content-center
              %h2.display-4 Log in
              %br
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control font-weight-lighter", placeholder: "Enter email"
              %small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
          .row-4
            .col-lg-9.ml-auto.justify-content-center
              %br
              = f.password_field :password, autocomplete: "current-password", class: "form-control font-weight-lighter", placeholder: "Enter your password"
            %br
          .row-4
            .col-lg-9.ml-auto.justify-content-center
              - if devise_mapping.rememberable?
                .form-check
                  = f.check_box :remember_me, class: "form-check-input"
                  &nbsp;
                  = f.label :remember_me, class: "text-muted form-check-label"
                %br
                = f.submit "Log in", class: "btn btn-info" 
              = render "devise/shared/links"
  .col
